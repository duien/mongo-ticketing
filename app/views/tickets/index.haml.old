#content
  .display
    %table.tickets{ :cellspacing => 0 }
      %tr.header
        %td #
        %td Status
        %td Subject
        %td Last Update
      - @tickets.each do |ticket|
        %tr.ticket{ :class => ticket.status.to_s }
          %td.id= link_to ticket.short_id, ticket
          %td.status
            %span= ticket.status
          %td.subject
            =link_to ticket.subject, ticket
          %td.last_update 
            %span.timestamp-relative #{time_ago_in_words ticket.updated_at} ago
            %span.timestamp-absolute #{ticket.updated_at.strftime('%a %b %e at %l:%M%p')}
  .filters
    Filter